rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - authenticated users can read and write their own data
    match /users/{userId} {
      // Any authenticated user can create their own document
      allow create: if request.auth != null;
      
      // A user can read and update their own data
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // Admin can access all user data
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.khatu_website_admin == true;
    }
    
    // Bookings collection
    match /bookings/{bookingId} {
      // Authenticated users can read and create their own bookings
      allow read, create: if request.auth != null;
      // Users can update/delete their own bookings, or an admin can
      allow update, delete: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.khatu_website_admin == true);
    }
    
    // Admin has access to all documents
    match /{document=**} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.khatu_website_admin == true;
    }
  }
}
